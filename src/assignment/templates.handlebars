<script id="assignment" type="text/x-handlebars-template">
    
    <div class="assignment-top"></div>

    <hr/>

    <div class="assignment-page"></div>
    
</script>


<script id="assignment_top_edit" type="text/x-handlebars-template">
    
    <input class="span12" type="text" data="title" placeholder="Assignment Title"/>
    <textarea class="span12" data="description" placeholder="Assignment Description">{{ description }}</textarea>
    <br/>Due date: <input class="span3 due-date">
    <br/><br/>
    {{> item_edit_buttons }}
    
</script>


<script id="assignment_list" type="text/x-handlebars-template">
    
    <h2>Assignments</h2>
    <ul>
        {{#each collection/models }}
            <li><a href="{{ ../url }}{{ id }}/">{{ attributes/title }}</a></li>
        {{/each }}
    </ul>

    <span class="editor-only"><button class="add-button btn success">Add assignment</button></span>
    
</script>


<script id="assignment_top" type="text/x-handlebars-template">
    
    <h2 data="title">{{ title }}</h2 >

    <div class="description">{{ description }}</div>

    {{#if due }}<br/><b>Due:</b> {{$date due }}<br/>{{/if }}

    <span class="editor-only"><button class="item-button edit-button btn success">Edit assignment details</button></span>
    
</script>
