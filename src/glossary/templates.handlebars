<script id="glossary_list" type="text/x-handlebars-template">
    <span class="editor-only">
            <button class="add-button btn success">Add glossary item</button>
    </span>
    <ul>
        {{#each models }}
        <li><a href="{{ slug }}/">{{#if attributes.title}}{{ attributes.title }}{{else}}Untitled{{/if}}</a>
        {{#each attributes.alternateTitle.models}}
            , {{attributes.alternateTitle}}
        {{/each}}</li>
        {{/each}} 
    </ul> 
</script>

<script id="glossary" type="text/x-handlebars-template">
    <h3>{{title}}</h3>
    {{{ html }}}
    <button class="close-button btn danger">X</button>

</script>

<script id="glossary_edit" type="text/x-handlebars-template">
    <div class= "title">
        <input class="span12" type="text" data="title" value="{{title}}" placeholder="Title"/>
        <div class="attachAltTitle"></div>
        <input class"span12" id="altTitle" type = "text" data="alternateTitle" placeholder="Enter new alternate title" /> 
    </div>
    <textarea class="ckeditor">{{{ html }}}</textarea>
    <br/>
    {{> item_edit_buttons }}
    
</script>

<script id="alt_title_edit" type="text/x-handlebars-template">
    <input class"span12" type = "text" data="alternateTitle" value="{{alternateTitle}}"/>
    <button class="section-button delete-button btn danger">X</button>
</script>        
