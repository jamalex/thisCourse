<script id="item_teacher" type="text/x-handlebars-template">

    <h4>{{ name }}</h4>
    {{#if title }}<div>({{ title }})</div>{{/if}}
    <div>{{ email }}</div>
    <div>{{ phone }}</div>
    {{> item_buttons }}    

</script>


